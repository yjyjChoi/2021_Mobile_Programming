<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:stretchColumns="0">

        <!-- musk -->
        <TableRow android:id="@+id/musk1">
            <ImageView
                android:id="@+id/img_pure_musk"
                android:layout_width="100dp"
                android:layout_height="120dp"
                android:gravity="center_vertical"
                app:srcCompat="@drawable/pure_musk" />

            <TextView
                android:id="@+id/txt_pure_musk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="10dp"
                android:text="나르시소 로드리게즈 - 퓨어 머스크\n(머스크 계열 EDP)" />

            <Button
                android:id="@+id/buy1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:layout_marginRight="20dp"
                android:textSize="10dp"
                android:text="구매하기" />
        </TableRow>

        <TableRow android:id="@+id/musk2">
            <ImageView
                android:id="@+id/img_original_musk"
                android:layout_width="100dp"
                android:layout_height="120dp"
                android:gravity="center_vertical"
                app:srcCompat="@drawable/original_musk" />

            <TextView
                android:id="@+id/txt_original_musk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="10dp"
                android:text="키엘 - 오리지널 머스크\n(머스크 계열 EDT)" />

            <Button
                android:id="@+id/buy2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:layout_marginRight="20dp"
                android:textSize="10dp"
                android:text="구매하기" />
        </TableRow>


        <!-- woody -->
        <TableRow android:id="@+id/woody1">
            <ImageView
                android:id="@+id/img_wood_sage_sea_salt"
                android:layout_width="100dp"
                android:layout_height="120dp"
                android:gravity="center_vertical"
                app:srcCompat="@drawable/wood_sage_sea_salt" />

            <TextView
